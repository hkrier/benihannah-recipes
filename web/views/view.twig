{% extends "layout.html" %}

{% block content %}
    <a class="title" href="{{ recipe.url }}">{{ recipe.title }}</a>
    <a class="btn upper-right" href="/">&larr; &nbsp; Back to List</a>

    <div class="meta-data">
        {{ recipe.date }} &nbsp; Hannah: {{ recipe.rating_hannah }} &nbsp; Ben: {{ recipe.rating_ben }}
    </div>

    <img class="recipe-img" src="{{ recipe.image_url }}" />

    <h3 class="subtitle">Ingredients</h3>
    <div class="ingredients">
        {{ recipe.ingredients }}
    </div>

    <h3 class="subtitle">Directions</h3>
    <div class="directions">
        {{ recipe.directions }}
    </div>

{% endblock %}